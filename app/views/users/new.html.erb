<h1 class="text-center">Signup!</h1>


<%= form_for :user, url: '/users' do |f| %>

  <div class="form-group text-center">Name: </div> <div class="form-group text-center"><%= f.text_field :name %></div>
  <div class="form-group text-center">Email: </div> <div class="form-group text-center"><%= f.text_field :email %></div>
  <div class="form-group text-center">Password: </div> <div class="form-group text-center"><%= f.password_field :password %></div>
  <div class="form-group text-center">Password Confirmation: </div><div class="form-group text-center"><%= f.password_field :password_confirmation %></div>
  <div class="form-group text-center"><%= f.submit "Submit" %></div>

<% end %>